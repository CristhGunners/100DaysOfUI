header
    width 100%
    margin 0 auto
    display flex
    align-items center
    justify-content center
    flex-flow column

    figure
        width 125px
        height 125px
        margin 1em auto
        border-radius 50%

        img
            width 100%
            border-radius 50%
            display block

    h1
        font-weight 900
        color gray1
        text-align center
        font-size 2.5em
        letter-spacing 1px
        margin 0 auto

    p
        width 90%
        color gray
        font-size 1.15em
        margin 0.75em auto
        text-align center

    nav
        width 90%
        margin 1em auto
        display flex
        align-items center
        justify-content center
        flex-flow row wrap

        a
            color gray1
            text-decoration none
            font-size 1.5em
            margin 0.5em

            &.twitter
                color twitter

            &.instagram
                color instagram

            &.medium
                color medium

            &.dribbble
                color dribbble

            &.behance
                color behance

            &.google-plus
                color google

            &.github
                color black

@media mqtablet

    body
        header
            h1
                font-size 3.5em
